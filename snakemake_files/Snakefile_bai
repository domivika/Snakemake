import os
import glob
import re


# your path to the directory with samples
samples, = glob_wildcards("fastq/{sample}.bam")

rule all:
	input:
		expand("fastq/{sample}.bam.{extension}", sample=samples, extension=["bai"])
rule samtools:
	input:
		bam="fastq/{sample}.bam"
	output:
		bai="fastq/{sample}.bam.bai"
	shell:
		"""
		echo "Input: {input.bam}"
		echo "Output: {output.bai}"

		# create indici
		samtools index {input.bam}
		"""

