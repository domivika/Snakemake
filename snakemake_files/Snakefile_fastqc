import os
import glob
import re

# samples location
samples, = glob_wildcards("fastq/{sample}.fastq")


rule all:
	input:
		expand("fastq/{sample}_fastqc.{extension}", sample=samples, extension=["zip", "html"])

rule fastqc:
	input:
		fq="fastq/{sample}.fastq"
	output:
		zip="fastq/{sample}_fastqc.zip",
		html="fastq/{sample}_fastqc.html"
	shell:
		"""
		echo "Input: {input.fq}"
		echo "Output: {output.zip}"

		fastqc -o fastq {input.fq}
		"""
